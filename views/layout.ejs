<%- include("header")  -%>

<h1 class="starter">COVID-19 GLOBAL STATISTICS</h1>

<section class="row container" style ="margin-left: 220px; margin-right: 220px;">
  <div class="cards text-white bg-warning mb-3 col-lg-4" style="max-width: 18rem;">
    <div class="card-body">
      <h3 class="card-title">INFECTED</h3>
      <p class="card-text"><%=infected%></p>
    </div>
  </div>
  <div class="cards text-white bg-success mb-3 col-lg-4" style="max-width: 18rem;">
  <div class="card-body">
    <h3 class="card-title">TREATED </h3>
    <p class="card-text"><%=treated%></p>
  </div>
</div>
<div class="cards text-white bg-danger mb-3 col-lg-4" style="max-width: 18rem;">
  <div class="card-body">
    <h3 class="card-title">DEATHS</h3>
    <p class="card-text"><%=deaths%></p>
  </div>
</div>

</section>

<section class = "container">
  <div class="form-group">
    <form class="item" action="/" method="post">
      <label for="">Enter Country Name</label>
      <input type="text" name="country">
      <button class="btn btn-primary" type="submit">submit</button>
    </form>
  </div>
</section>

<%- include("footer")  -%>
